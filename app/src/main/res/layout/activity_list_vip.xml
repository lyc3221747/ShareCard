<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="@color/ThemeColor"
        android:orientation="horizontal">

        <Button
            android:id="@+id/list_elec_back"
            android:layout_width="26sp"
            android:layout_height="26sp"
            android:layout_marginTop="6sp"
            android:background="@drawable/ic_chevron_left_black_24dp" />

        <RelativeLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9sp"
                android:text="会员卡"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </RelativeLayout>


        <Button
            android:layout_width="26sp"
            android:layout_height="26sp"
            android:layout_marginTop="6sp"
            android:background="@color/ThemeColor" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <com.yyydjk.library.BannerLayout
            android:id="@+id/list_elec_banner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:autoPlayDuration="4000"
            app:indicatorMargin="10dp"
            app:indicatorPosition="rightBottom"
            app:indicatorShape="rect"
            app:indicatorSpace="3dp"
            app:isAutoPlay="true"
            app:scrollDuration="600"
            app:selectedIndicatorColor="?attr/colorPrimary"
            app:selectedIndicatorHeight="6dp"
            app:selectedIndicatorWidth="6dp"
            app:unSelectedIndicatorColor="#99ffffff"
            app:unSelectedIndicatorHeight="6dp"
            app:unSelectedIndicatorWidth="6dp" />

        <ListView
            android:id="@+id/list_elec_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
</LinearLayout>
    </ScrollView>

</LinearLayout>
