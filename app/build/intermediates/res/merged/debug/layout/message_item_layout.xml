<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/message_item_user_image"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:padding="10sp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:orientation="horizontal"
                android:layout_marginTop="10sp">

                <TextView
                    android:id="@+id/message_item_user_name"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="40sp"
                    android:gravity="left"
                    android:paddingTop="10sp"
                    android:text="阡阡"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/message_item_card_image"
                    android:layout_width="66sp"
                    android:layout_height="35sp"
                    android:layout_marginTop="5sp"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="10sp"/>
            </LinearLayout>


            <TextView
                android:id="@+id/message_item_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="请问是全场糕点都可以享受优惠吗... | 三天前"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
