<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafbfd"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_close_black_24dp"
            android:layout_marginTop="10sp"
            android:layout_gravity="center"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="8sp"
            android:id="@+id/btn_close"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="享卡"
            android:textColor="@color/ThemeColor"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:layout_marginRight="10sp"
            android:id="@+id/btn_submit"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorGray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卡名称:"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginLeft="20sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="填写你的卡券名哟~"
            android:id="@+id/card_name"
            android:textSize="15sp"
            android:inputType="text"
            android:background="@android:color/white"
            android:layout_marginLeft="10sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="6sp"
            android:background="@android:color/white"
            android:gravity="start"
            android:hint="描述一下你的卡券~"
            android:id="@+id/card_info"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/part1"
                android:layout_width="77sp"
                android:layout_height="77sp"
                android:layout_marginLeft="10sp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/picture1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/close1"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:background="@drawable/ic_sharecard_close"
                    android:onClick="close" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/part2"
                android:layout_width="77sp"
                android:layout_height="77sp"
                android:layout_marginLeft="10sp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/picture2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/close2"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:background="@drawable/ic_sharecard_close"
                    android:onClick="close" />
            </FrameLayout>


            <FrameLayout
                android:id="@+id/part3"
                android:layout_width="77sp"
                android:layout_height="77sp"
                android:layout_marginLeft="10sp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/picture3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/close3"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:background="@drawable/ic_sharecard_close"
                    android:onClick="close" />
            </FrameLayout>


            <FrameLayout
                android:id="@+id/addIamge"
                android:layout_width="77sp"
                android:layout_height="77sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_sharecard_addimage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20sp"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="添加图片" />
            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="6sp"
            android:drawableLeft="@drawable/ic_location"
            android:gravity="center_vertical"
            android:text="福建 福州 闽侯县" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorGray"
        android:layout_marginTop="10sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10sp"
        android:background="@color/gray"
        android:layout_marginTop="5sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分类"
        android:textSize="15sp"
        android:layout_marginTop="6sp"
        android:layout_marginLeft="10sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="@drawable/ic_share_elec" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="电子卡"
                android:gravity="center"
                android:layout_marginTop="3sp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:layout_gravity="center"
                android:layout_marginTop="3sp"
                android:id="@+id/checkbox_elec"
                android:onClick="checked"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:button="@drawable/check_box_bg"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="@drawable/ic_share_vip"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="会员卡"
                android:gravity="center"
                android:layout_marginTop="3sp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:layout_gravity="center"
                android:layout_marginTop="3sp"
                android:id="@+id/checkbox_vip"
                android:onClick="checked"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:button="@drawable/check_box_bg"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="@drawable/ic_share_discount" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="优惠券"
                android:gravity="center"
                android:layout_marginTop="3sp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:layout_gravity="center"
                android:layout_marginTop="3sp"
                android:id="@+id/checkbox_discount"
                android:onClick="checked"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:button="@drawable/check_box_bg"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/gray"
        android:layout_marginTop="6sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原价"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginLeft="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥ "
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="10sp"/>
        <EditText
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:hint="0"
            android:id="@+id/org_price"
            android:textSize="15sp"
            android:inputType="numberDecimal"
            android:background="@android:color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/gray"
        android:layout_marginTop="8sp"
        android:layout_marginLeft="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出价"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginLeft="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥ "
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="10sp"/>
        <EditText
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:hint="0"
            android:id="@+id/now_price"
            android:textSize="15sp"
            android:inputType="numberDecimal"
            android:background="@android:color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/gray"
        android:layout_marginTop="8sp"
        android:layout_marginLeft="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="8sp"
        android:id="@+id/choose_house">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卡窝"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginLeft="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择卡窝更多小伙伴看到哦~"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"
            android:textSize="15sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:id="@+id/cardHouse"/>

    </LinearLayout>

</LinearLayout>